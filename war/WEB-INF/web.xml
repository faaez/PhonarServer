<?xml version="1.0" encoding="utf-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xmlns="http://java.sun.com/xml/ns/javaee"
xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" version="2.5">
	<servlet>
		<servlet-name>PhonarServer</servlet-name>
		<servlet-class>com.phonarapp.server.PhonarServerServlet</servlet-class>
	</servlet>
	<servlet>
        <servlet-name>RegistrationServer</servlet-name>
        <servlet-class>com.phonarapp.server.RegistrationServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LocationReportServer</servlet-name>
        <servlet-class>com.phonarapp.server.LocationReportServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>TestServer</servlet-name>
        <servlet-class>com.phonarapp.server.TestServlet</servlet-class>
    </servlet>
    
	<servlet-mapping>
		<servlet-name>PhonarServer</servlet-name>
		<url-pattern>/phonarserver</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
        <servlet-name>RegistrationServer</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LocationReportServer</servlet-name>
        <url-pattern>/locationreport</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>TestServer</servlet-name>
        <url-pattern>/test</url-pattern>
    </servlet-mapping>
    
	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
	</welcome-file-list>
</web-app>
